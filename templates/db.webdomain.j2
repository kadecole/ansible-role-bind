; {{ ansible_managed }}
$TTL    4h

@           IN      SOA     {{ ansible_hostname }}.    hostmaster.{{ ansible_hostname }}. (
                            2013092801    ; Serial
                            1d            ; slave refresh (1 day)
                            2h            ; slave retry time in case of a problem (2 hours)
                            2w            ; slave expiration time (2 weeks)
                            2d            ; minimum caching time in case of failed lookups (2 days)
                            )
            IN      NS      {{ ansible_hostname }}.
{% for webdomain_zone in bind_config_webdomain_zones %}
            IN      A       {{ webdomains_zone.webserver }}
www         IN      A       {{ webdomains_zone.webserver }}
{% endfor %}
